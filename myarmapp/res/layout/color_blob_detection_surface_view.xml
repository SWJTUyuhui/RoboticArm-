<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="top"
    android:background="#1C81C5">
    <Button
    android:id="@+id/mid_Button"
    android:layout_width="160dp"
    android:layout_height="240dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/c" />
<Button android:background="@drawable/up" 
    android:layout_height="120dp" 
    android:layout_width="120dp" 
    android:layout_above="@+id/mid_Button"
    android:layout_centerHorizontal="true"
    android:id="@+id/foward_Button"/>

<Button android:background="@drawable/l" 
    android:layout_height="120dp" 
    android:layout_width="120dp" 
    android:id="@+id/leftfoward_Button" 
    android:layout_alignTop="@+id/foward_Button" 
    android:layout_toLeftOf="@+id/foward_Button"/>

<Button android:background="@drawable/r" 
    android:layout_height="120dp" 
    android:layout_width="120dp" 
    android:id="@+id/rightfoward_Button" 
    android:layout_alignTop="@+id/foward_Button" 
    android:layout_toRightOf="@+id/foward_Button"/>



<Button
    android:id="@+id/zhua_Button"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_alignLeft="@+id/rightfoward_Button"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="22dp"
    android:background="@drawable/fang" />

<Button
    android:id="@+id/fang_Button"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_alignBaseline="@+id/zhua_Button"
    android:layout_alignBottom="@+id/zhua_Button"
    android:layout_alignLeft="@+id/leftfoward_Button"
    android:layout_marginLeft="39dp"
    android:background="@drawable/zhua" />

</RelativeLayout>
